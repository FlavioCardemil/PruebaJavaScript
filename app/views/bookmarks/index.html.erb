<h1>Bookmarks</h1>

<div id="bookmark-form"></div>

<div id="bookmark-button">
    <%= link_to 'Nuevo Bookmark', new_bookmark_path, class: 'btn btn-success', remote: true %>
</div>

<div id="bookmark-show"></div> 

<table class="table table-striped table-bordered table-hover text-center">
    <thead>
        <tr>
            <th>id</th>
            <th>URL</th>
            <th>Categor√≠a</th>
            <th>Tipo</th>
        </tr>
    </thead>

    <tbody id="bookmark-table">
        <% @bookmarks.each do |bookmark| %>
        <tr id="bookmark-<%= bookmark.id %>">
            <td><%= bookmark.id %></td>
            <td><%= bookmark.url %></td>
            <td><%= bookmark.category.title %></td>
            <td><%= bookmark.type.title %></td>
            <td><%= link_to 'Show', bookmark, remote: true %></td>
            <td><%= link_to 'Edit', edit_bookmark_path(bookmark), remote: true %></td>
            <td><%= link_to 'Destroy', bookmark, method: :delete, remote: true, data: { confirm: 'seguro?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>    